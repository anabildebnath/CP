//easy way 
#include <iostream>
#include <string>
#include <boost/algorithm/string.hpp>
using namespace std;
 
int main() {
    string str1="Java2Blog";
    string str2="Blog";
    bool b =  boost::algorithm::contains(str1, str2);
    if(b==1)
    {
        cout << "Substring "<<"'" << str2 << "'" <<" is present in " <<str1 << endl;
    }
    else
    {
        cout<<"Substring is not present.";
    }
    return 0;
}

